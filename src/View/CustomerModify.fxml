      <ComboBox fx:id="comboBoxCountry" layoutX="50.0" layoutY="380.0" prefWidth="150.0" promptText="Select Country" />
      <ComboBox fx:id="comboBoxDivision" layoutX="50.0" layoutY="440.0" prefWidth="150.0" promptText="Select Division" />
      <Label layoutX="50.0" layoutY="360.0" text="Country" />
      <Label layoutX="50.0" layoutY="420.0" text="Division" />
    </children>
</AnchorPane>
