        <Label layoutX="30.0" layoutY="30.0" text="Modify Customer">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Button layoutX="50.0" layoutY="520.0" mnemonicParsing="false" onAction="#onActionUpdateCustomer" text="Modify Customer" />
        <Button layoutX="180.0" layoutY="520.0" mnemonicParsing="false" onAction="#onActionCancel" text="Cancel" />
        <Label layoutX="50.0" layoutY="80.0" text="Customer ID" />
        <Label layoutX="50.0" layoutY="120.0" text="Name" />
        <Label layoutX="50.0" layoutY="180.0" text="Address" />
        <Label layoutX="50.0" layoutY="240.0" text="Postal Code" />
        <Label layoutX="50.0" layoutY="300.0" text="Phone Number" />
        <TextField fx:id="custName" layoutX="50.0" layoutY="140.0" />
        <TextField fx:id="custAddy" layoutX="50.0" layoutY="200.0" />
        <TextField fx:id="custPostal" layoutX="50.0" layoutY="260.0" />
        <TextField fx:id="custPhone" layoutX="50.0" layoutY="320.0" />
